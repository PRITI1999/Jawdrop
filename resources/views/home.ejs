<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tailwind css -->
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/app.css">
    <!-- Font awesome -->
    <script src="https://kit.fontawesome.com/78228ce055.js" crossorigin="anonymous"></script>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Righteous&family=Stalinist+One&display=swap" rel="stylesheet"> 
    <title>Jawdrop</title>
</head>
<body>
    <!-- Navigation bar -->
    <header>
        <nav class="fixed mx-auto px-5 py-2 w-full z-50 flex items-center justify-between py-4 navbar">
            <div>
                <div class="flex items-center">
                    <img src="/img/logo.png" class="icon-size logo-icon ml-6" alt="logo">
                    <h3 class="logo-txt ml-6">AWDROP</h3>
                </div>
            </div>
            <div>
                <ul class="flex items-center">
                    <li class="ml-16"><a href="#" class="rounded-full">Summer</a></li>
                    <li class="ml-16"><a href="#" class="rounded-full">Winter</a></li>
                    <li class="ml-16"><a href="#" class="rounded-full">New</a></li>
                    <li class="ml-16"><a href="#" class="rounded-full">Bridal</a></li>
                    <li class="ml-16"><a href="#" class="rounded-full">Sign-in</a></li>
                    <li class="ml-16"><a href="#" class="rounded-full"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Cover -->
    <section class="cover">
        <div>
            <h1 class="cover-txt">Don't wait! Just Grab</h1>
            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                <div class="rounded-md shadow">
                  <a href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                    Buy now
                  </a>
                </div>
                <div class="mt-3 sm:mt-0 sm:ml-3">
                  <a href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                    Explore new
                  </a>
                </div>
              </div>
        </div>
    </section>

    <script src="/js/app.js"></script>
</body>
</html>