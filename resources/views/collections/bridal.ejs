<section class="collection bg-indigo-200">
    <h1 class="collection_heading text-center text-orange-600 border-b border-gray-500 mb-4">Bridal Collection</h1>
    <div class="grid grid-cols-2 col-gap-12 row-gap-16">
        <% dresses.forEach((dress) => { %>
            <div class="card rounded-md">
                <img class="dress my-4 mx-auto" src="img/<%= dress.image %>">
                    <div class="text-center">
                        <h2 class="mb-4 text-2xl border-b border-gray-400"><%= dress.name %></h2>
                        <span class="size rounded-md uppercase text-s"><%= dress.size %></span>
                        <div class="flex item-center justify-around mt-6">
                            <span class="font-bold text-2xl">Rs. <%= dress.price %></span>
                            <button data-dress="<%= JSON.stringify(dress) %>" class="add-to-cart rounded-full flex py-1 px-6 item-center font-bold hover:bg-orange-600">
                                <span class="ml-2">+</span>
                                <span class="mx-2">Add</span>
                            </button>
                        </div>
                    </div>
            </div>
                <% }) %>
    </div>
</section>